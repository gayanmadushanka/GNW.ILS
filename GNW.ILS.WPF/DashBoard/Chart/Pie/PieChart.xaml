<base:UCBase 
    x:Class="Pervation.Presentation.DashBoard.Chart.Pie.PieChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:pie="clr-namespace:Pervation.Presentation.DashBoard.Chart.Pie"
    xmlns:base="clr-namespace:Pervation.Presentation._Basic_Windows.Base"
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="500" MouseDoubleClick="PieChart_OnMouseDoubleClick">
    <UserControl.DataContext>
        <pie:PieChartViewModel />
    </UserControl.DataContext>

    <Grid>
    	<VisualStateManager.VisualStateGroups>
    		<VisualStateGroup x:Name="VisualStateGroup">
    			<VisualState x:Name="LegendPopOpenVisualState">
    				<Storyboard>
    					<BooleanAnimationUsingKeyFrames Storyboard.TargetProperty="(Popup.IsOpen)" Storyboard.TargetName="legendPop">
    						<DiscreteBooleanKeyFrame KeyTime="0" Value="True"/>
    					</BooleanAnimationUsingKeyFrames>
    				</Storyboard>
    			</VisualState>
    			<VisualState x:Name="LegendPopCloseVisualState"/>
    		</VisualStateGroup>
    	</VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
       
        <StackPanel Grid.Column="0" Orientation="Horizontal" Visibility="{Binding ChartData.RadioBtnVisibility,Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center">
             <Grid Height="24" Width="24" Margin="0,0,5,0">
                <Button x:Name="btnlegend" Style="{DynamicResource ToolMenuButtonStyle}" ToolTip="LEGEND" Click="Btnlegend_OnClick" Visibility="{Binding ChartData.LegendVisibility, Mode=TwoWay}">
        			<Grid Margin="-3">
        				<Path Data="M62.901597,39.2 L63.101594,39.2 C66.301599,39.2 68.901597,41.799999 68.901597,45 68.901597,48.2 66.301599,50.799999 63.101594,50.799999 L62.901597,50.799999 C59.701592,50.799999 57.101594,48.2 57.101594,45 57.101594,41.799999 59.701592,39.2 62.901597,39.2 z M44.901597,39.2 L45.101594,39.2 C48.301595,39.2 50.901597,41.799999 50.901597,45 50.901597,48.2 48.301595,50.799999 45.101594,50.799999 L44.901597,50.799999 C41.701596,50.799999 39.101594,48.2 39.101594,45 39.101594,41.799999 41.701596,39.2 44.901597,39.2 z M27.001595,39.2 L27.201596,39.2 C30.401597,39.2 33.001595,41.799999 33.001595,45 33.001595,48.2 30.401597,50.799999 27.201596,50.799999 L27.001595,50.799999 C23.801595,50.799999 21.201596,48.2 21.201596,45 21.201596,41.799999 23.801595,39.2 27.001595,39.2 z M45.301595,6.1000009 C23.701596,6.0999999 6.2015953,23.5 6.1015968,44.799999 6.0015955,55.2 10.001595,65 17.201596,72.300003 24.601596,79.699996 34.301595,83.800003 44.701596,83.900001 L45.001595,83.900001 C66.301599,83.900001 83.801599,66.599998 84.001595,45.299999 84.101594,23.799999 66.801599,6.1999993 45.301595,6.1000009 z M45.001595,0 C70.101594,0.19999933 90.201592,20.5 90.001595,45.299999 89.801599,69.900001 69.701592,90 45.001595,90 45.001595,90 44.701596,90 44.701596,90 32.701596,89.900001 21.401595,85.199996 13.001595,76.599998 4.5015955,68.099998 -0.098404408,56.7 0.0015969276,44.7 0.20159531,20.1 20.301595,-4.7683716E-07 45.001595,0 z" Stretch="Fill" Fill="#FF0A3B51" Width="24" Height="24"/>
        			</Grid>
        		</Button>
        		<Popup x:Name="legendPop" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="1031" Margin="0,24,0,0" VerticalOffset="5">
            		<Border BorderBrush="#FF747474" BorderThickness="1" Background="White" Padding="10">
            			<Grid>
            				<StackPanel Orientation="Vertical">
            					<TextBlock Text="LEGEND" HorizontalAlignment="Left" Foreground="#FF666666"/>
            					<telerik:RadLegend Items="{Binding LegendItems, ElementName=RadPieChart}" />
            				</StackPanel>
            			</Grid>
            		</Border></Popup>
        	</Grid>
             <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
             	<telerik:RadRadioButton x:Name="BtnDaily" Content="Daily" Checked="Btn_OnClick" Visibility="{Binding ChartData.BtnDailyVisibility, Mode=TwoWay}" Width="24" Height="24" Style="{DynamicResource DailyRadRadioButtonStyle}" Margin="0,0,5,0"/>
             	<telerik:RadRadioButton x:Name="BtnWeekly" Content="Weekly" Checked="Btn_OnClick" Visibility="{Binding ChartData.BtnWeeklyVisibility, Mode=TwoWay}" Width="24" Height="24" Style="{DynamicResource WeeklyRadRadioButtonStyle}" Margin="0,0,5,0"/>
             	<telerik:RadRadioButton x:Name="BtnMonthly" Content="Monthly" Checked="Btn_OnClick" Visibility="{Binding ChartData.BtnMonthlyVisibility, Mode=TwoWay}" Width="24" Height="24" Style="{DynamicResource MonthlyRadRadioButtonStyle}" Margin="0,0,5,0"/>
             	<telerik:RadRadioButton x:Name="BtnYearly" Content="Yearly" Checked="Btn_OnClick" Visibility="{Binding ChartData.BtnYearlyVisibility, Mode=TwoWay}" Width="24" Height="24" Style="{DynamicResource YearlyRadRadioButtonStyle}" Margin="0,0,5,0"/>
             </StackPanel>
			<ComboBox x:Name="CbCompany"  Width="100" SelectedIndex="0" SelectionChanged="CbCompany_OnSelectionChanged" Height="24" MinHeight="24" Margin="0,0,5,0">
            	<ComboBoxItem Content="Reckitt" />
            	<ComboBoxItem Content="Nestle" />
            	<ComboBoxItem Content="Maliban 1" />
            	<ComboBoxItem Content="Maliban 2" />
            </ComboBox>
            <!--<RadioButton x:Name="RbG2Button1" Checked="RbG2Button1_OnChecked" Content="Reckitt" Margin="0,0,5,0"/>
            <RadioButton x:Name="RbG2Button2" Checked="RbG2Button2_OnChecked" Content="Nestle" Margin="0,0,5,0"/>
            <RadioButton x:Name="RbG2Button3" Checked="RbG2Button3_OnChecked" Content="Maliban 1" Margin="0,0,5,0"/>
            <RadioButton x:Name="RbG2Button4" Checked="RbG2Button4_OnChecked" Content="Maliban 2" Margin="0,0,5,0"/>-->
        </StackPanel>
        <CheckBox x:Name="ChkShowLabel" Visibility="{Binding ChartData.ShowLabelVisibility,Mode=TwoWay}" Content="Show Labels" IsChecked="True" HorizontalAlignment="Right" Grid.ColumnSpan="2" FontSize="10.667"/>
        <telerik:RadPieChart x:Name="RadPieChart" Palette="Windows8" Zoom="{Binding Zoom, Mode=TwoWay}" Margin="0,5,5,0" Grid.Row="1">
            <telerik:RadPieChart.EmptyContentTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="You have to drag some dashboard item."></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </telerik:RadPieChart.EmptyContentTemplate>
            <telerik:RadPieChart.Behaviors>
                <telerik:ChartPanAndZoomBehavior ZoomMode="Horizontal" />
            </telerik:RadPieChart.Behaviors>
            <telerik:PieSeries ValueBinding="Value" ItemsSource="{Binding ChartData.SeriesOneData.CategoryValuePairList,Mode=TwoWay}" RadiusFactor="0.77" ShowLabels="{Binding ElementName=ChkShowLabel,Path=IsChecked}">
                <telerik:PieSeries.LabelDefinitions>
                    <telerik:ChartSeriesLabelDefinition Margin="-8,0,0,0" >
                        <!--<telerik:ChartSeriesLabelDefinition.Binding>
                            <telerik:PropertyNameDataPointBinding PropertyName="Category" />
                        </telerik:ChartSeriesLabelDefinition.Binding>-->
                    </telerik:ChartSeriesLabelDefinition>
                </telerik:PieSeries.LabelDefinitions>
                <telerik:PieSeries.LegendSettings>
                    <telerik:DataPointLegendSettings TitleBinding="Category" />
                </telerik:PieSeries.LegendSettings>
                <telerik:PieSeries.AngleRange>
                    <telerik:AngleRange StartAngle="270" SweepAngle="360" />
                </telerik:PieSeries.AngleRange>
            </telerik:PieSeries>
        </telerik:RadPieChart>
    </Grid>
</base:UCBase>
